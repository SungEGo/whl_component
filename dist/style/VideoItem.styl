.videoitem {
    a, a:link, a:visited {
        color: #000000; // #904E0E;
        text-decoration: none;
    }

    .edu-ytimg {
        width: 210px;
        font-size: 14px;
        margin: 0px 5px 24px 0px;
        text-decoration: none;
    }

    .edu-ytbigimg {
        width: 300px;
        font-size: 16px;
        // margin: 0px 8px 24px;
        text-decoration: none;
        display: inline-flex;
        flex-direction: column;
    }

    .edu-historyimg {
        width: 246px;
        height: 138px;
        margin-right: 16px;
    }

    .pointer {
        cursor: pointer;
        user-select: none;
    }

    .relative {
        position: relative;
    }

    .edu-cover {
        // border: 1px solid red;
        position: absolute;
        height: 100%;
        width: 100%;
    }

    .edu-historyvideo {
        display: flex;
        margin: 16px 0 0;
        text-decoration: none;

        @media screen and (max-width: 555px) {
            flex-wrap: wrap;
        }
    }

    .twoline {
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        white-space: normal;
    }

    .yttitle {
        padding: 4px 24px 2px 0px;
    }

    .oneline {
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
        -webkit-line-clamp: 1;
        -webkit-box-orient: vertical;
    }

    .ytviewct {
        font-size: 13px;
        color: #606060;
        // border: 1px red solid;
        display: block;
        margin: 0;
        padding: 0;
    }

    .edu-historytitle {
        font-size: 18px;
    }

    .inline-block {
        display: inline-flex;
    }

    .ytviewbottom {
        display: flex;
        justify-content: space-between;
    }

    .channellink {
        display: flex;

        > div {
            flex: 0 0;
        }
    }
}
